generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model centers {
  id       BigInt @id @default(autoincrement())
  name     String @db.VarChar(255)
  location String @db.VarChar(255)
  contact  String @db.VarChar(255)
}

model homeworks {
  id          BigInt            @id @default(autoincrement())
  session_id  BigInt
  description String            @db.VarChar(255)
  due_date    DateTime          @db.DateTime(0)
  center_id   BigInt
  section     homeworks_section

  @@index([center_id], map: "center_id")
  @@index([session_id], map: "session_id")
}

model parents {
  id       BigInt  @id @default(autoincrement())
  name     String  @db.VarChar(255)
  phone    String  @db.VarChar(255)
  email    String? @unique(map: "email") @db.VarChar(255)
  password String  @db.VarChar(255)
}

model quizzes {
  id         BigInt          @id @default(autoincrement())
  session_id BigInt
  max_score  Int
  date       DateTime        @db.DateTime(0)
  center_id  BigInt
  section    quizzes_section

  @@index([center_id], map: "center_id")
  @@index([session_id], map: "session_id")
}

model sessions {
  id         BigInt           @id @default(autoincrement())
  teacher_id BigInt
  date       DateTime         @db.DateTime(0)
  topic      String           @db.VarChar(255)
  center_id  BigInt
  section    sessions_section

  @@index([center_id], map: "center_id")
  @@index([teacher_id], map: "teacher_id")
}

model student_homeworks {
  id          BigInt @id @default(autoincrement())
  homework_id BigInt
  student_id  BigInt
  status      String @db.VarChar(255)

  @@index([homework_id], map: "homework_id")
  @@index([student_id], map: "student_id")
}

model student_quizzes {
  id         BigInt @id @default(autoincrement())
  quiz_id    BigInt
  student_id BigInt
  score      Int

  @@index([quiz_id], map: "quiz_id")
  @@index([student_id], map: "student_id")
}

model student_sessions {
  id         BigInt  @id @default(autoincrement())
  session_id BigInt
  student_id BigInt
  notes      String? @db.VarChar(255)

  @@index([session_id], map: "session_id")
  @@index([student_id], map: "student_id")
}

model student_trials {
  id         BigInt @id @default(autoincrement())
  trial_id   BigInt
  student_id BigInt
  result     String @db.VarChar(255)

  @@index([student_id], map: "student_id")
  @@index([trial_id], map: "trial_id")
}

model students {
  id           BigInt           @id @default(autoincrement())
  name         String           @db.VarChar(255)
  email        String?          @unique(map: "email") @db.VarChar(255)
  section      students_section
  center_id    BigInt?
  phone_number String           @db.VarChar(255)
  password     String           @db.VarChar(255)
  parent_id    BigInt?

  @@index([center_id], map: "center_id")
  @@index([parent_id], map: "parent_id")
}

model teachers {
  id       BigInt  @id @default(autoincrement())
  name     String  @db.VarChar(255)
  email    String? @unique(map: "email") @db.VarChar(255)
  phone    String  @db.VarChar(255)
  password String  @db.VarChar(255)
}

model trials {
  id          BigInt         @id @default(autoincrement())
  description String         @db.VarChar(255)
  date        DateTime       @db.DateTime(0)
  center_id   BigInt
  max_score   Int
  section     trials_section
  teacher_id  BigInt

  @@index([center_id], map: "center_id")
  @@index([teacher_id], map: "teacher_id")
}

enum students_section {
  st_sec            @map("1st sec")
  nd_sec_scientific @map("2nd sec scientific")
  nd_sec_literary   @map("2nd sec literary")
  rd_sec            @map("3rd sec")
}

enum sessions_section {
  st_sec            @map("1st sec")
  nd_sec_scientific @map("2nd sec scientific")
  nd_sec_literary   @map("2nd sec literary")
  rd_sec            @map("3rd sec")
}

enum quizzes_section {
  st_sec            @map("1st sec")
  nd_sec_scientific @map("2nd sec scientific")
  nd_sec_literary   @map("2nd sec literary")
  rd_sec            @map("3rd sec")
}

enum homeworks_section {
  st_sec            @map("1st sec")
  nd_sec_scientific @map("2nd sec scientific")
  nd_sec_literary   @map("2nd sec literary")
  rd_sec            @map("3rd sec")
}

enum trials_section {
  st_sec            @map("1st sec")
  nd_sec_scientific @map("2nd sec scientific")
  nd_sec_literary   @map("2nd sec literary")
  rd_sec            @map("3rd sec")
}
